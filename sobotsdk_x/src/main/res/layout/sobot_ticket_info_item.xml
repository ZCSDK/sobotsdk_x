<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/sobot_bg_ticket_info"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sobot_tv_ticket_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sobot_ticket_detail_status_resolved"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
        android:lines="1"
        android:maxWidth="120dp"
        android:paddingStart="7dp"
        android:paddingTop="3dp"
        android:paddingEnd="7dp"
        android:paddingBottom="3dp"
        android:textColor="@color/sobot_refresh_text_color"
        android:textSize="@dimen/sobot_text_font_12" />

    <TextView
        android:id="@+id/sobot_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
        android:textColor="@color/sobot_color_text_third"
        android:textSize="@dimen/sobot_text_font_12" />

    <ImageView
        android:id="@+id/sobot_tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sobot_tv_time"
        android:layout_alignBottom="@+id/sobot_tv_time"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/sobot_tv_time"
        android:src="@drawable/sobot_ticket_new_flag"
        android:visibility="gone"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/sobot_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sobot_tv_time"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
        android:maxLines="2"
        android:textColor="@color/sobot_color_text_first"
        android:textSize="@dimen/sobot_text_font_14" />

</RelativeLayout>