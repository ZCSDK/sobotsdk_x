<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sobot_template_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <TextView
        android:id="@+id/sobot_template_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sobot_oval_white_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
        android:paddingStart="10dp"
        android:paddingTop="7dp"
        android:paddingEnd="10dp"
        android:paddingBottom="7dp"
        android:textColor="@color/sobot_template2_lable_text_color"
        android:textSize="@dimen/sobot_text_font_14" />

</LinearLayout>