<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sobot_btn_chat_room_long_left"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sobot_tv_copy_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:text="@string/sobot_ctrl_copy"
        android:textColor="@color/sobot_color_white"
        android:textSize="@dimen/sobot_text_font_12" />

    <View
        android:id="@+id/view_split"
        android:layout_width="@dimen/sobot_line_height_dp"
        android:layout_height="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:background="@color/sobot_color_line_divider" />

    <TextView
        android:id="@+id/sobot_tv_appoint_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:text="@string/sobot_str_appoint"
        android:textColor="@color/sobot_color_white"
        android:textSize="@dimen/sobot_text_font_12" />

</LinearLayout>