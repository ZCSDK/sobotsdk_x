<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sobot_hot_item_hs"
    android:layout_width="82dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:background="@drawable/sobot_shadow_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.sobot.chat.widget.image.SobotProgressImageView
            android:id="@+id/sobot_hot_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            app:image_height="40dp"
            app:image_width="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/sobot_hot_item_title_zhanwei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/sobot_color_text_first"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/sobot_hot_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/sobot_color_text_first"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>