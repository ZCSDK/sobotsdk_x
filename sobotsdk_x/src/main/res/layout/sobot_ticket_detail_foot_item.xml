<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sobot_my_evaluate_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_color_bg_first"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sobot_line_height_dp"
        android:layout_marginTop="16dp"
        android:background="@color/sobot_color_line_divider" />

    <TextView
        android:id="@+id/sobot_my_evaluate_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sobot_color_bg_first"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp"
        android:textColor="@color/sobot_color_text_first"
        android:textSize="@dimen/sobot_text_font_14"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/sobot_ll_isSolve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sobot_color_bg_first"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/sobot_tv_my_evaluate_isSolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sobot_evaluate_issolve"
            android:textColor="@color/sobot_color_text_second"
            android:textSize="@dimen/sobot_text_font_12" />

        <TextView
            android:id="@+id/sobot_tv_isSolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/sobot_color_text_first"
            android:textSize="@dimen/sobot_text_font_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sobot_ll_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/sobot_color_bg_first"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/sobot_tv_my_evaluate_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sobot_color_text_second"
            android:textSize="@dimen/sobot_text_font_12" />

        <com.sobot.chat.widget.SobotFiveStarsSmallLayout
            android:id="@+id/sobot_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sobot_ll_lab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sobot_color_bg_first"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/sobot_tv_my_evaluate_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sobot_evaluate_lab"
            android:textColor="@color/sobot_color_text_second"
            android:textSize="@dimen/sobot_text_font_12" />

        <TextView
            android:id="@+id/sobot_tv_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/sobot_color_text_first"
            android:textSize="@dimen/sobot_text_font_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sobot_ll_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sobot_color_bg_first"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/sobot_tv_my_evaluate_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sobot_color_text_second"
            android:textSize="@dimen/sobot_text_font_12" />

        <TextView
            android:id="@+id/sobot_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/sobot_color_text_first"
            android:textSize="@dimen/sobot_text_font_12" />
    </LinearLayout>


</LinearLayout>