<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_color_bg_first"
    android:orientation="vertical">

    <include
        android:id="@+id/sobot_layout_titlebar"
        layout="@layout/sobot_layout_common_titlebar" />

    <!--列表-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sobot_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/sobot_ticket_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/sobot_color_bg_first"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/h_bottom_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/sobot_color_bg_first"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/sobot_reply_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sobot_bg_ticket_info"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:paddingEnd="10dp"
                android:paddingBottom="8dp"
                android:text="@string/sobot_reply"
                android:textColor="@color/sobot_color_text_first"
                android:textSize="@dimen/sobot_text_font_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sobot_evaluate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/sobot_normal_btn_bg"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:paddingEnd="10dp"
                android:paddingBottom="8dp"
                android:text="@string/sobot_str_bottom_satisfaction"
                android:textColor="@color/sobot_color_white"
                android:textSize="@dimen/sobot_text_font_16"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_bottom_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/sobot_color_bg_first"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:visibility="gone">


            <TextView
                android:id="@+id/v_sobot_reply_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sobot_bg_ticket_info"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:paddingEnd="10dp"
                android:paddingBottom="8dp"
                android:text="@string/sobot_reply"
                android:textColor="@color/sobot_color_text_first"
                android:textSize="@dimen/sobot_text_font_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/v_sobot_evaluate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/sobot_normal_btn_bg"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sobot_text_line_spacing_extra"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:paddingEnd="10dp"
                android:paddingBottom="8dp"
                android:text="@string/sobot_str_bottom_satisfaction"
                android:textColor="@color/sobot_color_white"
                android:textSize="@dimen/sobot_text_font_16"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>