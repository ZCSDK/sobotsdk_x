<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_color_bg_first"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/work_order_customer_field_text_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/sobot_color_text_second"
                android:textSize="@dimen/sobot_text_font_14" />

            <TextView
                android:id="@+id/work_order_customer_field_text_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/sobot_color_text_first"
                android:textColorHint="@color/sobot_color_text_third"
                android:textSize="@dimen/sobot_text_font_14"
                 />
        </LinearLayout>

        <ImageView
            android:id="@+id/work_order_customer_field_text_img"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sobot_right_arrow_icon" />
    </LinearLayout>


    <View
        android:id="@+id/work_order_customer_field_text_bootom_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="12dp"
        android:background="@color/sobot_common_gray4" />

</LinearLayout>