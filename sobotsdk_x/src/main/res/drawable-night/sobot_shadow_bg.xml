<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--阴影  圆角 4-->
    <!--最底下的一层-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00363636" />
            <corners android:radius="4dp" />
        </shape>
    </item>
