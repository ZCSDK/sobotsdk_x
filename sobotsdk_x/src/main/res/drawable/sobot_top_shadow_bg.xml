<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--只有顶部阴影  圆角 4-->
    <!--最底下的一层-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0DEBEBEB" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#1AEBEBEB" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33EBEBEB" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#40EBEBEB" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/sobot_color_bg_four" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>