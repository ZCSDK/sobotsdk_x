<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--顶和踩阴影边框-->
    <!--最底下的一层-->
    <item>
        <shape >
            <corners android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <solid android:color="#0286a3bf" />
        </shape>
    </item>
    <item
        android:bottom="0.3dp"
        android:left="0.3dp"
        android:right="0.3dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <solid android:color="#0386a3bf" />
        </shape>
    </item>
    <item
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <solid android:color="#0486a3bf" />
        </shape>
    </item>

    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <solid android:color="#0586a3bf" />
        </shape>
    </item>

    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item
        android:bottom="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <solid android:color="#0686a3bf" />
        </shape>
    </item>

    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <solid android:color="#0786a3bf" />
        </shape>
    </item>
    <item
        android:bottom="2.5dp"
        android:left="2.5dp"
        android:right="2.5dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <solid android:color="#0886a3bf" />
        </shape>
    </item>
    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"/>
            <solid android:color="@color/sobot_white" />
        </shape>
    </item>
</layer-list>