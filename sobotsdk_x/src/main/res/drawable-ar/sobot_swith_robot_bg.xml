<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--顶和踩阴影边框-->
    <!--最底下的一层-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0DEBEBEB" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>

    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#1AEBEBEB" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>

    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item
        android:bottom="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33EBEBEB" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item
        android:bottom="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#40EBEBEB" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
    <!--上一层设置距离下层的边距，显示出来下层的阴影-->
    <item
        android:bottom="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/sobot_color_bg_four" />
            <corners
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
</layer-list>