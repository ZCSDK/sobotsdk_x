<resources>

    <style name="sobot_activity_def_theme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="sobot_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="sobot_dialog_skill" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/sobot_AnimBottom</item>
    </style>

    <style name="sobot_AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sobot_popupwindow_in</item>
        <item name="android:windowExitAnimation">@anim/sobot_popupwindow_out</item>
    </style>

    <style name="sobot_dialog_dcrc" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="sobot_center_remind_note">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/sobot_color_remind_text</item>
        <item name="android:textSize">@dimen/sobot_text_font_12</item>
        <item name="android:visibility">gone</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">@dimen/sobot_msg_margin_edge</item>
        <item name="android:layout_marginEnd">@dimen/sobot_msg_margin_edge</item>
    </style>

    <style name="sobot_center_remind_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sobot_color_remind_text</item>
        <item name="android:textSize">@dimen/sobot_text_font_12</item>
        <item name="android:lineSpacingExtra">@dimen/sobot_text_line_spacing_extra</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="sobot_clearHistoryDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/sobot_AnimBottom</item>
    </style>

    <style name="sobot_FullScreenDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/sobot_AnimBottom</item>
    </style>

    <style name="sobot_noAnimDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="sobot_AppThemeDialogIsTranslucent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--是否启用标题栏-->
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/sobot_AnimBottom</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="sobot_back_DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="sobot_progress_circle">
        <item name="android:indeterminateDrawable">@drawable/sobot_progressbar_circle_loading</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--邀请评价解决和未解决背景-->
    <style name="sobot_rb_evaluate_style">
        <item name="android:textColor">@color/sobot_color_text_first</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sobot_bg_cai_reason_lable_checkbox_bg</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/sobot_text_line_spacing_extra</item>
    </style>

    <style name="sobot_rb_satisfied_style">
        <item name="android:textColor">@drawable/sobot_satisfied_btn_text_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="sobot_dialog_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="sobot_custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="sobot_pickerview_dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/sobot_pickerview_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/sobot_pickerview_dialog_scale_out</item>
    </style>

    <style name="sobot_tv_extend">
        <item name="android:drawablePadding">2dp</item>
        <item name="android:drawableRight">@drawable/sobot_icon_arrow_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sobot_bg_more_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">#0daeaf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="sobot_grid_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:background">@color/sobot_color_bg_first</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:numColumns">2</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarThumbVertical">@drawable/sobot_skill_group_scroll_img</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!--聊天页面 左侧昵称 样式-->
    <style name="sobot_chatting_nickname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:lineSpacingExtra">@dimen/sobot_text_line_spacing_extra</item>
        <item name="android:textColor">@color/sobot_chat_left_nikename_color</item>
        <item name="android:textSize">@dimen/sobot_msg_nickname_size</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--聊天页面 右侧昵称 样式-->
    <style name="sobot_chatting_right_nickname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/sobot_chat_left_nikename_color</item>
        <item name="android:lineSpacingExtra">@dimen/sobot_text_line_spacing_extra</item>
        <item name="android:textSize">@dimen/sobot_msg_nickname_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--聊天页面 左侧头像 样式-->
    <style name="sobot_chatting_left_face_style">
        <item name="android:layout_width">@dimen/sobot_msg_face_width_heigth</item>
        <item name="android:layout_height">@dimen/sobot_msg_face_width_heigth</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:visibility">visible</item>
    </style>

    <!--聊天页面 右侧头像 样式-->
    <style name="sobot_chatting_right_face_style">
        <item name="android:layout_width">@dimen/sobot_msg_face_width_heigth</item>
        <item name="android:layout_height">@dimen/sobot_msg_face_width_heigth</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:visibility">visible</item>
    </style>

    <!--聊天消息左侧气泡背景 右边无空白区距-->
    <style name="sobot_msg_left_content_ll_bg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sobot_chat_msg_bg_left</item>
        <item name="android:paddingStart">@dimen/sobot_msg_left_right_padding_edge</item>
        <item name="android:paddingTop">@dimen/sobot_msg_top_bottom_padding_edge</item>
        <item name="android:paddingEnd">@dimen/sobot_msg_left_right_padding_edge</item>
        <item name="android:paddingBottom">@dimen/sobot_msg_top_bottom_padding_edge</item>
    </style>
    <!--消息左侧气泡背景 右边有空白区距 -->
    <style name="sobot_msg_left_content_ll_empty_bg_style" parent="sobot_msg_left_content_ll_bg_style">
        <item name="android:layout_marginEnd">@dimen/sobot_chat_msg_boundary_to_empty_width</item>
    </style>
    <!--聊天消息右侧气泡背景-->
    <style name="sobot_msg_right_content_ll_bg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sobot_chat_msg_bg_right</item>
        <item name="android:paddingStart">@dimen/sobot_msg_left_right_padding_edge</item>
        <item name="android:paddingTop">@dimen/sobot_msg_top_bottom_padding_edge</item>
        <item name="android:paddingEnd">@dimen/sobot_msg_left_right_padding_edge</item>
        <item name="android:paddingBottom">@dimen/sobot_msg_top_bottom_padding_edge</item>
    </style>

    <!--文件消息左侧气泡背景 空心边框-->
    <style name="sobot_msg_file_left_content_ll_bg_style">
        <item name="android:background">@drawable/sobot_chat_msg_hollow_bg_left</item>
        <item name="android:paddingStart">@dimen/sobot_msg_frame_msgtype_spacing</item>
        <item name="android:paddingTop">@dimen/sobot_msg_frame_msgtype_spacing</item>
        <item name="android:paddingEnd">@dimen/sobot_msg_frame_msgtype_spacing</item>
        <item name="android:paddingBottom">@dimen/sobot_msg_frame_msgtype_spacing</item>
    </style>

    <!--文件消息右侧气泡背景 空心边框-->
    <style name="sobot_msg_file_right_content_ll_bg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sobot_chat_msg_hollow_bg_right</item>
    </style>

    <!--位置消息右侧气泡背景 空心边框 有内间距-->
    <style name="sobot_msg_file_right_content_ll_bg_padding_style">
        <item name="android:background">@drawable/sobot_chat_msg_hollow_bg_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/sobot_msg_frame_msgtype_spacing</item>
        <item name="android:paddingTop">@dimen/sobot_msg_top_bottom_padding_edge</item>
        <item name="android:paddingEnd">@dimen/sobot_msg_frame_msgtype_spacing</item>
        <item name="android:paddingBottom">@dimen/sobot_msg_top_bottom_padding_edge</item>
    </style>

    <!--聊天消息气泡上下间距-->
    <style name="sobot_msg_top_bottom_style">
        <item name="android:paddingTop">@dimen/sobot_msg_top_bottom_margin</item>
        <item name="android:paddingBottom">@dimen/sobot_msg_top_bottom_margin</item>
    </style>

    <style name="sobot_card_msg_top_bottom_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--右侧发送消息  左侧空白区域  背景样式-->
    <style name="sobot_msg_left_empty_bg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/sobot_chat_msg_boundary_to_empty_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:gravity">end</item>
    </style>

    <!--左侧发送消息  右侧空白区域  背景样式-->
    <style name="sobot_left_msg_right_empty_bg_style">
        <item name="android:layout_width">@dimen/sobot_chat_msg_boundary_to_empty_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <!--发送消息 菊花 样式-->
    <style name="sobot_msg_send_loading_style">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <!--发送消息 发送结果 样式-->
    <style name="sobot_msg_send_status_style">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:src">@drawable/sobot_icon_send_fail</item>
    </style>

    <!--发送消息 已读未读样式-->
    <style name="sobot_msg_read_status_style">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- PagerSlidingTab -->
    <declare-styleable name="sobot_PagerSlidingTab">
        <attr name="indicatorColor" format="color" />
        <attr name="underlineColor" format="color" />
        <attr name="sobotdividerColor" format="color" />
        <attr name="tabTextColor" format="color" />
        <attr name="curTabTextColor" format="color" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="underlineHeight" format="dimension" />
        <attr name="pst_dividerPadding" format="dimension" />
        <attr name="tabPaddingLeftRight" format="dimension" />
        <attr name="scrollOffset" format="dimension" />
        <attr name="tabBackground" format="reference" />
        <attr name="shouldExpand" format="boolean" />
        <attr name="pst_textAllCaps" format="boolean" />
    </declare-styleable>

    <style name="SobotCardMargin">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="SobotCardMargin_right">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="sobot_cur_text">
        <item name="android:textColor">@color/sobot_color_text_second</item>
        <item name="android:textSize">@dimen/sobot_text_font_14</item>
        <item name="android:lineSpacingExtra">@dimen/sobot_text_line_spacing_extra</item>
        <item name="android:layout_marginTop">@dimen/sobot_tiket_text_line_margin</item>
    </style>

    <style name="sobot_cur_text_value">
        <item name="android:textColor">@color/sobot_color_text_first</item>
        <item name="android:textColorHint">@color/sobot_color_text_third</item>
        <item name="android:textSize">@dimen/sobot_text_font_14</item>
        <item name="android:lineSpacingExtra">@dimen/sobot_text_line_spacing_extra</item>
        <item name="android:layout_marginTop">@dimen/sobot_tiket_text_and_value_margin</item>
        <item name="android:layout_marginBottom">@dimen/sobot_tiket_text_line_margin</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="sobot_sobot_cur_text_one_line" parent="@style/sobot_cur_text_value">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="sobot_dialog_title">
        <item name="android:textColor">@color/sobot_color_text_first</item>
        <item name="android:textSize">@dimen/sobot_text_font_16</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/sobot_dialog_margin</item>
        <item name="android:layout_marginEnd">@dimen/sobot_dialog_margin</item>
        <item name="android:lineSpacingExtra">@dimen/sobot_text_line_spacing_extra</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="sobot_dialog_bottom_btn">
        <item name="android:textColor">@color/sobot_color_white</item>
        <item name="android:textSize">@dimen/sobot_text_font_18</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/sobot_msg_margin_edge</item>
        <item name="android:layout_marginEnd">@dimen/sobot_msg_margin_edge</item>
        <item name="android:layout_marginBottom">@dimen/sobot_msg_margin_edge</item>
        <item name="android:lineSpacingExtra">@dimen/sobot_text_line_spacing_extra</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>